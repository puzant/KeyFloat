{
  "name": "KeyFloat",
  "version": "1.0.0",
  "description": "A floating multilingual keyboard that displays native character mappings for physical English keyboards. Supports Arabic, French, and more with drag, dark mode, key sounds, and dynamic layouts for Windows and macOS.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/extension-icon.png",
    "32": "assets/extension-icon.png",
    "48": "assets/extension-icon.png",
    "128": "assets/extension-icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "injection-script.js",
        "assets/key-press-sound.mp3",
        "assets/info-icon.svg",
        "assets/arabic-flag.svg",
        "assets/keyboard-icon-dark.png",
        "assets/shutdown-icon.svg",
        "assets/shutdown-icon-dark.svg",
        "assets/arrow-down-icon.svg",
        "assets/arrow-down-icon-dark.svg",
        "assets/x-icon.png",
        "assets/collapse-icon.svg",
        "assets/keyboard-icon.svg",
        "assets/sun-icon.svg",
        "assets/moon-icon.svg",
        "assets/collapse-icon-dark.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "manifest_version": 3
}
