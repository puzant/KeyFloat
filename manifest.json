{
  "name": "Floating Keyboard",
  "version": "0.1.0",
  "description": "Assisting Language Keyboard",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches":["<all_urls>"],
      "js": ["content-script.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
 "web_accessible_resources": [
    {
      "resources": [
        "injection-script.js",
        "assets/key-press-sound.mp3",
        "assets/info-icon.svg",
        "assets/arabic-flag.svg",
        "assets/keyboard-icon-dark.png",
        "assets/shutdown-icon.svg",
        "assets/shutdown-icon-dark.svg",
        "assets/arrow-down-icon.svg",
        "assets/arrow-down-icon-dark.svg",
        "assets/x-icon.png",
        "assets/collapse-icon.svg",
        "assets/keyboard-icon.svg", 
        "assets/sun-icon.svg",
        "assets/moon-icon.svg",
        "assets/collapse-icon-dark.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "manifest_version": 3
}